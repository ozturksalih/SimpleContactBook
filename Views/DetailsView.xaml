<UserControl x:Class="FinalProjectSalihOzturk.Views.DetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalProjectSalihOzturk.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <Grid>
        <StackPanel Grid.Column="2" Grid.Row="1"  Margin="5,0,0,0">
            <TextBox x:Name="txtName" Text ="First Name" Margin="0,5,0,0"/>
            <TextBox x:Name="txtLastName" Text = "Last Name" Margin="0,5,0,0"/>
            <TextBox x:Name="txtEmail" Text ="E-mail" Margin="0,5,0,0"/>
            <TextBox x:Name="txtTelNumber" Text ="Telephone Number" Margin="0,5,0,0" />
            <TextBox x:Name="txtDateOfBirth" Text ="Date Of Birth" Margin="0,5,0,0"/>
            <Button  x:Name="btnDelete" Margin="0,5,0,0"  >Delete Name</Button>
            <Button  x:Name="btnAdd" Margin="0,5,0,0"  Content="Add Name"/>
        </StackPanel>
    </Grid>
</UserControl>
